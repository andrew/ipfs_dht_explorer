<h1><%= @cid.cid %></h1>

<div class="row">
  <div class="col-md-12">
    <% @wants.each do |want| %>
      <% node = want.node %>
      <div class='node mb-2'>
        <span title='<%= node.country_name %>'><%= flag_icon(node.country_iso_code, squared: true) %></span>
        <span class='cid'><%= link_to node.node_id, node %></span><br>
        <small class='text-muted'>
          <% if node.agent_version.present? %>
            <%= node.agent_version %> -
          <% end %>
          <%= distance_of_time_in_words_to_now want.created_at %> ago
        </small>
      </div>
    <% end %>

    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>
