<h1>
  Most Wanted CID
</h1>

<div class="row">
  <div class="col-md-12">
    <% @cids.each do |cid,v| %>
      <div class='cid mb-2'>
        <span class='cid'><%= link_to cid.cid, cid_path(cid.cid) %></span>
        <small class='text-muted'><%= number_with_delimiter v %> wants</small>
      </div>

    <% end %>

    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>
