<nav class="mb-2 mt-2 pl-0 navbar navbar-expand-lg navbar-light">
  <span class="navbar-brand" >
    <strong><%= @page_title = 'Most Wanted CIDs' %></strong>
    <small class='text-muted'><%= number_with_delimiter @pagy.count %></small>
  </span>
</nav>

<div class="row">
  <%= column_chart @scope.group(:wants_count).sum(:wants_count) %>
</div>

<div class="row">
  <div class="col-md-12">
    <% @cids.each do |cid| %>
      <div class='cid mb-2'>
        <span class='cid'><%= link_to cid.cid, cid_path(cid.cid) %></span>
        <small class='text-muted'><%= number_with_delimiter cid.wants_count %> wants</small>
      </div>

    <% end %>

    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>
