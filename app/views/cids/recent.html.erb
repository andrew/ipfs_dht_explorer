<h1>
  Recently Wanted CID
</h1>

<div class="row">
  <div class="col-md-12">
    <% @wants.each do |want| %>
      <div class='mb-2'>
        <p>
          <span title='<%= want.node.country_name %>'><%= flag_icon(want.node.country_iso_code, squared: true) %></span>
          <span class='cid'><%= link_to want.cid.cid, cid_path(want.cid.cid) %></span><br/>
          <small class='text-muted'>
            wanted by
            <span class=''><%= link_to want.node.node_id, want.node %></span>
            <%= distance_of_time_in_words_to_now want.created_at %> ago
          </small>
        </p>
      </div>

    <% end %>

    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>
